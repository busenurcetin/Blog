    <br /><br /><br />

    <div class="container">
      <h2 style="text-align: center; margin-bottom: 40px">Add A New Blog</h2>
      <form>
        <div class="form-group">
          <label for="blogTitle">Blog Title</label>
          <input
            type="text"
            class="form-control"
            id="blogTitle"
            placeholder="Blog Title"
          />
        </div>
        <br />
        <div class="form-group">
          <label for="comSentence">Blog Commercial Sentence</label>
          <input
            type="text"
            class="form-control"
            id="comSentence"
            placeholder="Blog Commercial Sentence"
          />
        </div>
        <br />
        <div class="form-group">
          <label for="comImage">Blog Commercial Image (ONLY URL)</label>
          <input
            type="text"
            class="form-control"
            id="comImage"
            placeholder="Blog Commercial Image"
          />
          <br /><br />
        </div>
        <textarea name="editor" id="myTextArea"></textarea>
        <button id="myButton" class="btn btn-danger">Submit</button>
      </form>
    </div>

    <!--Footer-->

