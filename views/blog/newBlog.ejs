    <!--JQuery CDN-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
      $(document).ready(function () {
        $("#myButton").click(function () {
          var blogTitle = $("#blogTitle").val();
          var comSentence = $("#comSentence").val();
          var comImage = $("#comImage").val();
          var blog = CKEDITOR.instances.myTextArea.getData();
          var data = {
            blogTitle: blogTitle,
            comSentence: comSentence,
            comImage: comImage,
            blog: blog,
          };

          $.post("addNewBlog", { data: data }).then(function (addedBlog) {
            console.log(addedBlog);
          });

          //console.log(blogTitle+ "***********"+comSentence+"*************"+comImage+"************"+blog);
        });
      });
    </script>
